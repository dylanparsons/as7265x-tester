{
  "name": "ESP32 DevKit",
  "platform": "esp32_devkit",
  "description": "ESP32 with WiFi and Bluetooth",
  "i2c_bus": 0,
  "pins": {
    "reset": 25,
    "status_led": 2,
    "sda": 21,
    "scl": 22,
    "interrupt": 26
  },
  "commands": {
    "gpio_set_high": "gpio_set_level({pin}, 1)",
    "gpio_set_low": "gpio_set_level({pin}, 0)", 
    "gpio_get": "gpio_get_level({pin})",
    "i2c_read": "i2c_master_read_from_device(I2C_MASTER_NUM, 0x{addr:02X}, &data, 1, 1000)",
    "i2c_write": "i2c_master_write_to_device(I2C_MASTER_NUM, 0x{addr:02X}, write_buffer, 2, 1000)",
    "i2c_scan": "// I2C scanner for addresses 0x08 to 0x77"
  },
  "communication": {
    "type": "wifi_tcp",
    "ip": "192.168.1.100",
    "port": 8080
  },
  "setup_instructions": [
    "Flash ESP32 with I2C bridge firmware",
    "Configure WiFi credentials",
    "Set static IP address",
    "Test TCP connection"
  ],
  "dependencies": {
    "esp_idf_components": ["driver", "esp_wifi"],
    "python_packages": ["socket"]
  }
}